<div class="d-flex flex-wrap align-items-center justify-content-center vh-100" >
  <% @plays.each do |play| %>
    <div class="card text-center mx-5">
      <div class="card-header">
        Control Number: <%= play.parent.control_number %>
      </div>
      <div class="card-body">
        <h5 class="card-title">Hope that you are able to relax, <%= play.parent.name %>!</h5>
        <%= link_to "My bill", play_path(play), class: "btn btn-primary m-3" %>
        <p class="card-text">Press to generate your billing</p>
      </div>
    </div>
  <% end %>
</div>
