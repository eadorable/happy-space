<br>
<div class="container d-flex flex-wrap align-items-center justify-content-center">
  <% if @plays.present? %>
    <% @plays.each do |play| %>
      <% if play.paid == false %>
        <div class="card text-center mb-3 col-md-4">
          <div class="card-header">
            Control Number: <%= play.parent.control_number %>
          </div>
          <div class="card-body">
            <h5 class="card-title">Hope that you are able to relax, <%= play.parent.name %>!</h5>
            <%= link_to "My bill", play_path(play), class: "btn btn-primary m-3" %>
            <p class="card-text">Press to generate your billing</p>
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
  <br>
    <div class="card text-center col-md-4">
      <div class="card-header">
        No record found!
      </div>
      <div class="card-body">
        <h5 class="card-title"></h5>
        <p class="card-text"></p>
      </div>
    </div>
  <% end %>
</div>
