
<% current_time = Time.now.strftime("%l:%M %p") %>

<% if @play.end_time.present? && @play.number_of_hours.present? %>

  <% total_time = 1 if ((@play.end_time - @play.start_time)/(60*60)).round(2) < 1 %>

  <% bill = (@play.price * total_time).round(2) %>

  <% start_time = @play.start_time.strftime("%l:%M %p")%>
  <% end_time = @play.end_time.strftime("%l:%M %p")%>

  <div class="d-flex flex-wrap align-items-center justify-content-center vh-100">
    <div class="card text-center "> <!-- Added mx-3 and my-3 for horizontal and vertical spacing -->
      <div class="card-header">
        <p class="m-0">Your billing statement</p>
        <p>Control #: <%= @play.parent.control_number %></p>
      </div>
      <div class="card-body">
        <h1 class="card-title">P<%= bill %></h1>
        <hr>
        <p class="card-text">Start Time: <%= start_time %></p>
        <hr>
        <p class="card-text">End Time: <%= end_time %></p>
        <hr>
        <p class="card-text text-success">Total Time: <%= total_time %> <%= total_time > 1 ? "Hours" : "Hour" %></p>
        <hr>
        <h3>Thank you for your patronage!</h3>
      </div>
    </div>
  </div>
<% else %>
  <% total_time = 0 %>
  <% bill = 0 %>
  <% start_time = @play.start_time.strftime("%l:%M %p")%>
  <% end_time = "N/A"%>

  <div class="d-flex flex-wrap align-items-center justify-content-center vh-100">
    <div class="card text-center "> <!-- Added mx-3 and my-3 for horizontal and vertical spacing -->
      <div class="card-header">
        <p class="m-0">Your billing statement</p>
        <p>Control #: <%= @play.parent.control_number %></p>
      </div>
      <div class="card-body">
        <h1 class="card-title">P<%= bill %></h1>
        <hr>
        <p class="card-text">Start Time: <%= start_time %></p>
        <hr>
        <p class="card-text">End Time: <%= end_time %></p>
          <%= form_with(model: @play, url: play_path(@play), method: :patch, html: { class: 'needs-validation' }) do |f| %>
            <div class="d-grid gap-2">
              <%= f.submit 'Update', class: 'btn btn-primary' %>
            </div>
          <% end %>
        <hr>
        <p class="card-text text-success">Total Time: <%= total_time %> <%= total_time > 1 ? "Hours" : "Hour" %></p>
        <hr>
        <h3>Thank you for your patronage!</h3>
      </div>
    </div>
  </div>
<% end %>

